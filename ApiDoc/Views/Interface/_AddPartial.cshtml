<!-- 参数维护窗口 -->
<div class="modal fade" id="myParamModel" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">维护参数</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <input id="txtParamSN" type="hidden" value="0" />
            <div class="modal-body">
                <div class="form-group row">
                    <label for="txtParamName" class="col-3 col-form-label">参数名称</label>
                    <div class="col-9">
                        <input class="form-control" id="txtParamName">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="txtParamRemark" class="col-3 col-form-label">参数描述</label>
                    <div class="col-9">
                        <input class="form-control" id="txtParamRemark">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="cbxParamDataType" class="col-3 col-form-label">数据类型</label>
                    <div class="col-9">
                        <select class="custom-select mr-sm" id="cbxParamDataType">
                            @foreach (string dataType in (List<string>)ViewData["DataType"])
                            {
                                <option value="@dataType">@dataType</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="txtParamDefault" class="col-3 col-form-label">默认值</label>
                    <div class="col-9">
                        <input class="form-control" id="txtParamDefault">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="btnSaveParam_Click()"><i class="fa fa-save"></i></button>
            </div>
        </div>
    </div>
</div>

