@model ApiDoc.Models.InterfaceModel

@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout_Edit.cshtml";
}

@section StyleSheet
{

    <style type="text/css">
        .w-lab {
            width: 90px;
            text-align: right;
        }
    </style>
}



<div class="container-fluid py-3 pr-0">

    <input type="hidden" id="txtSN" value="@Model.SN" />
    <input type="hidden" id="txtFKSN" value="@Model.FKSN" />

    <!--message -->
    <div id="mySuccess" class="toast position-fixed " role="alert" aria-live="assertive" aria-atomic="true" style="top:50%; left:50%; z-index:5;">
        <div class="toast-body bg-success text-white">
            保存成功
        </div>
    </div>
    <div id="myDelete" class="toast position-fixed " role="alert" aria-live="assertive" aria-atomic="true" style="top:50%; left:50%; z-index:5;">
        <div class="toast-body bg-warning text-white">
            请选择要删除的数据
        </div>
    </div>

    <div class="row pr-0 mr-0 border-bottom">

        <!-- base info -->
        <div class="col-9 pl-3">
            <div class="btn-toolbar mt-0 mb-2 " role="toolbar" aria-label="Toolbar with button groups">
                <div class="btn-group btn-group-sm border-bottom" role="group" aria-label="First group">
                    <button type="button" class="btn btn-info">基础操作</button>
                    <button type="button" class="btn btn-default" data-toggle="tooltip" data-placement="bottom" title="保存接口" onclick="btnSaveIntterface_Click()"><i class="fa fa-save"></i></button>

                </div>
                <div class="btn-group btn-group-sm border-bottom ml-2" role="group" aria-label="First group">
                    <button type="button" class="btn btn-info">路由操作</button>
                    <button type="button" class="btn btn-default" data-toggle="tooltip" data-placement="bottom" title="上传接口" onclick="btnUpLoad_Click()"><i class="fa fa-upload"></i></button>
                    <button type="button" class="btn btn-default" data-toggle="tooltip" data-placement="bottom" title="删除接口" onclick="btnDownLoad_Click()"><i class="fa fa-trash-o"></i></button>
                    <button type="button" class="btn btn-default" data-toggle="tooltip" data-placement="bottom" title="测试接口" onclick="btnShow_CS_Click()"><i class="fa fa-link"></i></button>
                </div>
            </div>
            <div class="input-group input-group-sm mb-3">
                <div class="input-group-prepend">
                    <div class="input-group-text w-lab">标题</div>
                </div>
                <input type="text" class="form-control" id="txtTitle" value="@Model.Title">
            </div>

            <!-- Url -->
            <div class="input-group input-group-sm mb-3">
                <div class="input-group-prepend">
                    <div class="input-group-text w-lab">Url</div>
                </div>
                @if (Model.SN == 0)
                {
                    <input type="text" class="form-control" id="txtUrl" value="@ViewData["FullPath"]" />
                }
                else
                {
                    <input type="text" class="form-control" id="txtUrl" value="@Model.Url" disabled="disabled" />
                }
            </div>

            <!-- 数据格式 -->
            <div class="input-group input-group-sm mb-3">
                <div class="input-group-prepend">
                    <div class="input-group-text w-lab">数据格式</div>
                </div>
                <select class="custom-select mr-sm" id="cbxSerializeType">
                    @if (Model.SerializeType == "Json")
                    {
                        <option value="Json" selected>Json</option>
                        <option value="Xml">Xml</option>
                    }
                    else
                    {
                        <option value="Json">Json</option>
                        <option value="Xml" selected>Xml</option>
                    }
                </select>
            </div>

            <!-- 结果集类型 -->
            <div class="input-group input-group-sm mb-3">
                <div class="input-group-prepend">
                    <div class="input-group-text w-lab">结果集类型</div>
                </div>
                <select class="custom-select mr-sm" id="cbxExecuteType">
                    @foreach (string value in (List<string>)ViewData["ExecuteType"])
                    {
                        if (Model.ExecuteType == value)
                        {
                            <option value="@value" selected>@value</option>
                        }
                        else
                        {
                            <option value="@value">@value</option>
                        }
                    }
                </select>
            </div>

            <!-- 发送方法 -->
            <div class="input-group input-group-sm mb-3">
                <div class="input-group-prepend">
                    <div class="input-group-text w-lab">发送方法</div>
                </div>
                <select class="custom-select" id="cbxMethod">
                    @if (Model.Method == "Post")
                    {
                        <option value="Post" selected>Post</option>
                        <option value="Get">Get</option>
                    }
                    else
                    {
                        <option value="Post">Post</option>
                        <option value="Get" selected>Get</option>
                    }

                </select>
            </div>

            <!-- 事物 -->
            <div class="input-group input-group-sm mb-3">
                <div class="input-group-prepend">
                    <div class="input-group-text w-lab"></div>
                </div>
                <div class="custom-control custom-checkbox ml-1 col-auto">
                    <input id="txtStepIsTransaction" type="checkbox" class="custom-control-input" checked="@Model.IsTransaction">
                    <label class="custom-control-label" for="txtStepIsTransaction">事物</label>
                </div>
            </div>
        </div>

        <!-- param -->
        <div id="myParam" class="col-3 p-0 pr-3">
            <div class="btn-toolbar w-100" role="toolbar" aria-label="Toolbar with button groups">
                <div class="btn-group btn-group-sm mb-2" role="group" aria-label="Second group">
                    <button type="button" class="btn btn-info">参数</button>
                    <button type="button" class="btn btn-default" data-toggle="tooltip" data-placement="bottom" title="添加参数" onclick="showParamAdd()"><i class="fa fa-plus"></i></button>
                    <button type="button" class="btn btn-default" data-toggle="tooltip" data-placement="bottom" title="修改参数" onclick=""><i class="fa fa-edit"></i></button>
                    <button type="button" class="btn btn-default" data-toggle="tooltip" data-placement="bottom" title="删除参数" onclick=""><i class="fa fa-trash-o"></i></button>
                    <button type="button" class="btn btn-default" data-toggle="tooltip" data-placement="bottom" title="刷新参数" onclick=""><i class="fa fa-refresh"></i></button>
                </div>
            </div>
            <div id="myParamList" class="bg-light" style="height:calc(100% - 40px);"></div>
        </div>
    </div>

    <!--Step -->
    @if (Model.SN > 0)
    {
        <div class="btn-toolbar my-2" role="toolbar" aria-label="Toolbar with button groups">
            <div class="btn-group btn-group-sm mr-2" role="group" aria-label="Second group">
                <button type="button" class="btn btn-info">接口步骤</button>
                <button type="button" class="btn btn-default" data-toggle="tooltip" data-placement="bottom" title="添加步骤" onclick="btnShowFlowStep(@Model.SN)"><i class="fa fa-plus"></i></button>
                <button type="button" class="btn btn-default" data-toggle="tooltip" data-placement="bottom" title="修改步骤" onclick="btnShowFlowStep(0)"><i class="fa fa-edit"></i></button>
                <button type="button" class="btn btn-default" data-toggle="tooltip" data-placement="bottom" title="删除步骤" onclick="btnShowFlowStepDelete()"><i class="fa fa-trash-o"></i></button>
            </div>
        </div>
        <div id="myStepList" class="pr-3">
        </div>
    }

</div>


<!-- 步骤窗口 -->
<div class="modal fade" id="myStep" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">工作流</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <input id="txtStepFKSN" type="hidden" value="@Model.SN" />
            <input id="txtStepSN" type="hidden" value="0" />
            <div class="modal-body">
                <div class="form-inline">
                    <label for="txtStepName" class="col-3 col-form-label">步骤名称</label>
                    <div class="col-9">
                        <input class="form-control" id="txtStepName">
                    </div>
                </div>
                <div class="form-inline mt-1">
                    <label for="txtStepOrder" class="col-3 col-form-label">顺序号</label>
                    <div class="col-7">
                        <input type="number" class="form-control" id="txtStepOrder">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" onclick="btnSaveFlowStep()">Save</button>
            </div>
        </div>
    </div>
</div>

<!-- 步骤删除提示 -->
<div class="modal fade" id="myModalDelete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">提示信息</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body"> 请确认是否要删除 </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal"><span class="fa fa-close" aria-hidden="true"></span>关闭</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal" onclick="btnSaveFlowStepDelete(@ViewData["FKSN"])"><span class="fa fa-save" aria-hidden="true"></span>确认</button>
            </div>
        </div>
    </div>
</div>

<!-- 测试 -->
<div class="modal fade bd-example-modal-lg" id="myModalCS" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body">
                <div class="form-group">
                    <label for="txtInput">输入值:</label>
                    <textarea id="txtInput" class="form-control bg-light p-0" style="min-width: 90%" rows="5"></textarea>
                </div>
                <div class="form-group">
                    <label for="txtResult">结果值:</label>
                    <textarea id="txtResult" class="form-control bg-light" style="min-width: 90%" rows="5"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="btnSendCS()">测试</button>
            </div>
        </div>
    </div>
</div>


<!-- 历史Sql窗口 -->
<div class="modal fade" id="myStepHisModel" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">添加脚本</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <input id="txtStepHisSN" type="hidden" value="0" />
            <input id="txtStepHisFKSN" type="hidden" value="0" />
            <div class="modal-body">
                <div class="form-group">
                    <input type="file" class="form-control-file" id="txtFile" name="fileTrans">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="btnAddHis_Click()"><i class="fa fa-save"></i></button>
            </div>
        </div>
    </div>
</div>

<!-- 历史Sql删除窗口 -->
<div class="modal fade" id="myHisModalDelete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel">提示信息</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body">
                请确认是否要删除
                <input id="txtStepHisFKSN" type="hidden" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal" onclick="btnDeleteStepHis_Click()">确认</button>
            </div>
        </div>
    </div>
</div>

<!-- 参数维护窗口 -->
<div class="modal fade" id="myParamModel" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">维护参数</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <input id="txtParamSN" type="hidden" value="0" />
            <div class="modal-body">
                <div class="form-inline">
                    <label for="txtParamName" class="col-3 col-form-label">参数名称</label>
                    <div class="col-9">
                        <input class="form-control" id="txtParamName">
                    </div>
                </div>
                <div class="form-inline">
                    <label for="txtParamRemark" class="col-3 col-form-label">参数描述</label>
                    <div class="col-9">
                        <input class="form-control" id="txtParamRemark">
                    </div>
                </div>
                <div class="form-inline mt-1">
                    <label for="cbxParamDataType" class="col-3 col-form-label">数据类型</label>
                    <div class="col-9">
                        <select class="custom-select mr-sm" id="cbxParamDataType">
                        </select>
                    </div>
                </div>
                <div class="form-inline">
                    <label for="txtParamDefault" class="col-3 col-form-label">默认值</label>
                    <div class="col-9">
                        <input class="form-control" id="txtParamDefault">
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="btnAddHis_Click()"><i class="fa fa-save"></i></button>
            </div>
        </div>
    </div>
</div>

<!-- 参数删除窗口 -->
<div class="modal fade" id="myParamModalDelete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">提示信息</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body"> 请确认是否要删除 </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal" onclick="btnDeleteStepHis_Click()">确认</button>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/interface.js"></script>
    <script src="~/js/flowstep.js"></script>
    <script src="~/js/flowstep-his.js"></script>
    <script src="~/js/interface-param.js"></script>
}

