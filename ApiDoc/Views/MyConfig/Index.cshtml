@model ApiDoc.Models.Components.MyConfig

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<ul class="nav nav-pills justify-content-center mb-3 border-bottom pb-2" id="pills-tab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="pills-home-tab" data-toggle="pill" href="#pills-home" role="tab" aria-controls="pills-home" aria-selected="true">验证码</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="pills-profile-tab" data-toggle="pill" href="#pills-profile" role="tab" aria-controls="pills-profile" aria-selected="false">数据库</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="pills-contact-tab" data-toggle="pill" href="#pills-contact" role="tab" aria-controls="pills-contact" aria-selected="false">Contact</a>
    </li>
</ul>
<div class="tab-content" id="pills-tabContent">
    <div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
        <div class="container-fluid">
            <form>
                <div class="form-group">
                    <label for="txtAuthorize">验证码:</label>
                    <input type="email" class="form-control" id="txtAuthorize" placeholder="验证码" value="@Model.Authorize">
                </div>

                <div class="form-group row">
                    <button class="btn btn-info ml-3" type="button" onclick="btnCreateAuthorize_Click()">
                        生成码
                    </button>
                    <button class="btn btn-info ml-2" type="button" onclick="showCreateAuthorize()">
                        <i class="fa fa-save"></i>
                    </button>
                </div>
            </form>
        </div>

    </div>
    <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">

    </div>
    <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">...</div>
</div>

<partial name="~/Views/Shared/_ToastPartial.cshtml" />
<partial name="~/Views/Shared/_ModalPartial.cshtml" />

@section Scripts
{
    <script src="~/js/myConfig.js"></script>
}

